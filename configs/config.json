{
  "name": "Cifar10_AUG_GAN",
  "n_gpu": 1,

  "arch": {
    "type": "SNGAN32",
    "args": {
      "latent_dim": 128
    }
  },
  "data_loader": {
    "type": "Cifar10DataLoader",
    "args": {
      "data_dir": "/data",
      "batch_size": 64,
      "shuffle": true,
      "num_workers": 2
    }
  },

  "optimizer_G": {
    "type": "Adam",
    "args": {
      "lr": 2e-4,
      "weight_decay": 0,
      "amsgrad": false,
      "betas": [0.5, 0.999]
    }
  },
  "optimizer_D": {
    "type": "Adam",
    "args": {
      "lr": 2e-4,
      "weight_decay": 0,
      "amsgrad": false,
      "betas": [0.5, 0.999]

    }
  },
  "loss": "wasserstein_loss",
  "metrics": [],
  "lr_scheduler_G": {
    "type": "StepLR",
    "args": {
      "step_size": 1,
      "gamma": 0.99
    }
  },
  "lr_scheduler_D": {
    "type": "StepLR",
    "args": {
      "step_size": 1,
      "gamma": 0.99
    }
  },
  "trainer": {
    "type": "WGANTrainer",

    "epochs": 100,

    "save_dir": "saved/",
    "save_period": 5,
    "verbosity": 2,

    "tensorboard": true
  },
  "eval": {
    "save_dir": "saved/generated",
    "n_sample": 1000,
    "batch_size": 8
  },
  "augment": {
    "type": "Ada",
    "args": {
      "xflip": 1,
      "rotate90": 1,
      "xint": 1,
      "scale":1,
      "aniso":1,
      "xfrac":1,
      "lumaflip":1,
      "hue":1,
      "saturation": 1,
      "brightness": 1,
      "contrast": 1,
      "cutout": 1
    }
  }
}
